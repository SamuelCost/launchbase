{% extends "layout.njk"%}

{%block head%}

<title>Portfolio - Samuel Costa</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{%endblock%}

{%block content%}

        <div id="wrapper">
            <h1>Aulas</h1>
        </div>

        <section class="cards">

            {%for item in items %}
                <div class="card" id="{{item.id}}">
                    <div class="card_image-container {{'featured-wrapper' if item.featured}}">
                        <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
                        {%if item.featured%}
                            <div class="featured">Feature</div>
                        {%endif%}
                    </div>
                    <div class="card_content">
                        <p>{{item.title}}</p>
                        <p>Conteúdo especial para você que quer aprender programação do zero</p>
                    </div>
                    <div class="card_info">
                        <p>{{item.duration}}</p>
                        <p class="card_price">{{item.price}}</p>
                    </div>
                </div>
            {% endfor %}
        </section>


        <script src="/scripts.js"></script>

 {%endblock%}