{% extends "layout.njk" %}

{% block content %}
<section id = "page_recipes" class="recipes">
    {% for dataRecipe in dataRecipes %}
        <div class="recipe" id="{{dataRecipe.id}}">
            <div class="recipe_img">
                <img src="_img/{{dataRecipe.id}}.png" alt="Imagem do {{dataRecipe.title}}">
            </div>
            <div class="recipe_content">
                <p>{{dataRecipe.title}}</p>
            </div>
            <div class="chef_recipe">
                <p>por {{dataRecipe.author}}</p>
            </div>
        </div>
    {% endfor %}
    
</section>
{% endblock content %}

{% block modal %}
<div class="modal_overlay">
    <div class="modal">
        <img class="img_modal" src="" alt="">
        <div class="modal_content">
            <p class="text_content"></p>
        </div>
        <div class="modal_chef">
            <p class="chef"></p>
        </div>
        <div class="close_modal">
            <a>Fechar modal</a>
        </div>
    </div>
</div>
{% endblock modal %}
