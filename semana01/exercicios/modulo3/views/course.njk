{% extends "layout.njk" %}

{% block content %}
<h1 id="content">{{course.id}}</h1>

<section id="course">
        <div class="course" id="{{course.id}}">
            <div class="course_img">
                <a href="https://rocketseat.com.br/{{course.id}}"><img src="{{course.img}}" alt="Logo {{course.id}}"></a>
            </div>
        </div>
        <div class="course_content">
                <p>{{course.resume}}</p>
        </div>
</section>

<div id="overlay">
    <div id="modal">
        <a class="close-modal">
            <i class="material-icons">close</i>
        </a>
        <a class="max-modal">
            <span class="material-icons">
                maximize
            </span>
        </a>
        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
</div>
{% endblock content %}

