{% extends "admin/layout.njk" %}

{% block content %}
    <div class="showEditAdmin">
        <h3>Receita: {{recipes.title}}</h3>
        <a href="/admin/recipes/{{recipes.id}}/edit">Editar receita</a>
    </div>

    <div class="imgRecipe">
        <img src={{recipes.image}} alt="Imagem do {{recipes.title}}">
    </div>

    <div class="title">
        <h1>{{recipes.title}}</h1>
        <p>por {{recipes.author}}</p>
    </div>

    <div class="ingredients">
        <h3>Ingredientes <a class="showHideIng">ESCONDER</a></h3>

        <div class="content_ingredients">
            <ul>
                {% for ingredients in recipes.ingredients %}
                    <li>{{ingredients}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="preparation">
        <h3>Modo de Preparo <a class="showHidePrep">ESCONDER</a></h3>

        <div class="content_preparation">
            {% for preparation in recipes.preparation %}
                <p>{{preparation}}</p>
            {% endfor %}
        </div>
        
    </div>

    <div class="information">
        <h3>Informação adicionais <a class="showHideInfo">ESCONDER</a></h3>

        <div class="content_information">
            <p>{{recipes.information}}</p>
        </div>
        <br>
    </div>

{% endblock content %}